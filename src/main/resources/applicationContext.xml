<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="musicPlayer.properties"/>

    <bean id="classicalMusicBean"
          class="com.chmykhun.springlearning.ClassicalMusic"
          init-method="doInit"
          destroy-method="doDestroy"
          factory-method="getInstance">
    </bean>

    <bean id="rockMusicBean"
          class="com.chmykhun.springlearning.RockMusic">
    </bean>

    <bean id="jazzMusicBean"
          class="com.chmykhun.springlearning.JazzMusic">
    </bean>

    <bean id="musicPlayer"
          class="com.chmykhun.springlearning.MusicPlayer">
        <property name="musicCollection">
            <list>
                <ref bean="classicalMusicBean"/>
                <ref bean="rockMusicBean"/>
                <ref bean="jazzMusicBean"/>
            </list>
        </property>
        <property name="name" value="${musicPlayer.name}"/>
        <property name="volume" value="${musicPlayer.volume}"/>
    </bean>

</beans>